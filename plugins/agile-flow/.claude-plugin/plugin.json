{
  "name": "agile-flow",
  "version": "2.1.0",
  "description": "AI驱动的敏捷开发插件：轻量级任务管理，与现有插件协同工作",
  "author": {
    "name": "agile-flow"
  },
  "license": "MIT",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use-hook.sh"
          }
        ]
      }
    ]
  }
}
