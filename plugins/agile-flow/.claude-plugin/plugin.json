{
  "name": "agile-flow",
  "version": "2.0.0",
  "description": "AI驱动的敏捷开发插件：只需 start/stop 命令，技能自动完成初始化、任务管理、TDD开发、测试验收、文档更新",
  "author": {
    "name": "agile-flow"
  },
  "license": "MIT",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/session-start-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/post-tool-use-hook.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/stop-hook.sh"
          }
        ]
      }
    ]
  }
}
